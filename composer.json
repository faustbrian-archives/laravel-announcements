{
    "name": "kodekeep/laravel-announcements",
    "description": "Announcements for Laravel.",
    "keywords": [
        "kodekeep",
        "laravel-announcements"
    ],
    "homepage": "https://github.com/kodekeep/laravel-announcements",
    "license": "MPL-2.0",
    "authors": [
        {
            "name": "Brian Faust",
            "email": "brian@kodekeep.com",
            "homepage": "https://kodekeep.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "illuminate/contracts": "^6.0",
        "illuminate/support": "^6.0",
        "league/commonmark": "^1.3",
        "spatie/laravel-sluggable": "^2.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "graham-campbell/analyzer": "^2.4",
        "orchestra/testbench": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "KodeKeep\\Announcements\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KodeKeep\\Announcements\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-html=.coverage --coverage-clover=coverage.xml",
        "format": "vendor/bin/php-cs-fixer fix ./"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "KodeKeep\\Announcements\\Providers\\AnnouncementsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
