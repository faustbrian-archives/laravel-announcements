{
    "name": "konceiver/laravel-announcements",
    "description": "Announcements for Laravel.",
    "keywords": [
        "konceiver",
        "laravel-announcements"
    ],
    "homepage": "https://github.com/konceiver/laravel-announcements",
    "license": "MPL-2.0",
    "authors": [
        {
            "name": "Brian Faust",
            "email": "hello@konceiver.dev",
            "homepage": "https://konceiver.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^8.0",
        "illuminate/support": "^8.0",
        "league/commonmark": "^1.3",
        "spatie/laravel-package-tools": "^1.9",
        "spatie/laravel-sluggable": "^2.3",
        "spatie/laravel-view-models": "^1.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "graham-campbell/analyzer": "^3.0",
        "orchestra/testbench": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Konceiver\\Announcements\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Konceiver\\Announcements\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-html=.coverage --coverage-clover=clover.xml",
        "format": "vendor/bin/php-cs-fixer fix ./"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Konceiver\\Announcements\\Providers\\AnnouncementsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
